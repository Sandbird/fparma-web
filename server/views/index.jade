extends layout

block content
  .ui.container
    .ui.equal.width.stackable.grid
      .ten.wide.column
        .ui.raised.segment
          img.ui.centered.image(src='/img/fplogo1024x1024.png' style="max-height: 256px")
      .stretched.column
        #server-info.ui.raised.loading.segment
          .ui.top.attached.large.label
            i.black.linux.icon
            span Server info
          .content

  if (locals.news.length)
    #news.ui.segment.container
      h2.ui.header News
      each item in locals.news
        .ui.raised.red.segment.mt-top2
          span.ui.top.attached.label Posted on #{item.display_date}
          h3.headline
            if item.url
              a(href=item.url)=item.header
            else
              span=item.header
          .mt-top1
            .ui.floating.message
              p.keep-format=item.text
